{
  "name": "@tml/crypto",
  "version": "0.1.0",
  "private": true,
  "description": "DID, Verifiable Credentials, and Ed25519 signing utilities for TML",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@tml/types": "*",
    "@digitalbazaar/ed25519-multikey": "^1.3.0",
    "@digitalbazaar/vc": "^7.0.0",
    "@digitalbazaar/data-integrity": "^2.4.0"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "vitest": "^2.1.0",
    "eslint": "^9.0.0",
    "@types/node": "^22.0.0"
  }
}
