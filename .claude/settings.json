{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_AUTOCOMPACT_PCT_OVERRIDE": "80"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c \"branch=$(git -C \\\"$PROJECT_DIR\\\" rev-parse --abbrev-ref HEAD 2>/dev/null); if [ \\\"$branch\\\" = \\\"main\\\" ]; then echo 'BLOCKED: Do not edit files directly on main branch. Create a feature branch first.' >&2; exit 1; fi\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c \"cd \\\"$PROJECT_DIR\\\" && npx --no-install eslint --fix \\\"$TOOL_INPUT_FILE_PATH\\\" 2>/dev/null || true\""
          }
        ]
      }
    ]
  }
}
