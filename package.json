{
  "name": "tml",
  "version": "0.1.0",
  "private": true,
  "description": "TML â€” Transparency Middleware Layer for public infrastructure accountability",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspace=packages/types && npm run build --workspace=packages/crypto && npm run build --workspace=packages/database && npm run build --workspace=apps/api && npm run build --workspace=apps/web",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:e2e": "npx playwright test --config=tests/playwright.config.ts",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "db:generate": "npm run db:generate --workspace=packages/database",
    "db:migrate:dev": "npm run db:migrate:dev --workspace=packages/database",
    "db:migrate:deploy": "npm run db:migrate:deploy --workspace=packages/database",
    "db:reset": "npm run db:reset --workspace=packages/database",
    "db:seed": "npm run db:seed --workspace=packages/database",
    "db:studio": "npm run db:studio --workspace=packages/database",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
